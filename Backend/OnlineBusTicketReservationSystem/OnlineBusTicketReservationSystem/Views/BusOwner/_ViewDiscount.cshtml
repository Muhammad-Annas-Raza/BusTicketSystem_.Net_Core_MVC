@model IEnumerable<tbl_discount>  


<table id="exam" class="table table-striped table-bordered">
        <thead>
          <tr>
            <!-- <th scope="col" class="text-center table-active">User id</th> -->
            <th scope="col"  class="text-center table-dark">Serial no.</th>
            <th scope="col" class="text-center table-dark">Discount b/w age 0 - 5</th>
            <th scope="col" class="text-center table-dark">Discount b/w age 6 - 12</th>
            <th scope="col" class="text-center table-dark">Discount b/w age 13 - 50</th>
            <th scope="col" class="text-center table-dark">Discount above age 51</th>
            <th scope="col" class="text-center table-dark">Bus Number Plate</th>
            <th scope="col" class="text-center table-dark">Discount Given Time</th>
            <th scope="col" class="text-center table-dark">Edit Discount</th>
            <th scope="col" class="text-center table-dark">Clear Discount</th>
          </tr>
        </thead>
        <tbody>
@{
           var j = 1;
 foreach (tbl_discount i in Model)
           {
           <tr class="xyz">
           <td class="text-center"><b>@j</b></td>             
           <td class="text-center">@i.discount_0_TO_5 % </td>
           <td class="text-center">@i.discount_6_TO_12 % </td>
           <td class="text-center">@i.discount_13_TO_50 % </td>                                      
           <td class="text-center">@i.discount_51 % </td>                                      
           <td class="text-center Usr_name">@i.bus_number</td>                                            
           <td class="text-center">@i.Created_at</td>           
           <td scope="row" class="text-center">
         
           <a class="btn btn-primary" style="font-size: 20px;" 
           asp-controller="BusOwner" 
           asp-action="EditDiscount"           
           asp-route-id="@i.discount_id"><i class="bi bi-pencil-square"></i></a>
           </td> 
             <td scope="row" class="text-center">
           <a class="btn btn-danger" style="font-size: 20px;" 
           data-ajax="true"
           data-ajax-mode="replace"
           data-ajax-update="#update_7"
           asp-controller="BusOwner" 
           asp-action="ClearDiscount"           
           asp-route-id="@i.discount_id"><i class='bx bx-trash'></i></a>
           </td> 
             
         </tr>
         j++;
      }
   }
        </tbody>
      </table>
      <!-- End Bordered Table -->