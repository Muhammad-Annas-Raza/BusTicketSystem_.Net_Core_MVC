@model IEnumerable<tbl_bus>  


<table id="exam" class="table table-striped table-bordered">
        <thead>
          <tr>
            <!-- <th scope="col" class="text-center table-active">User id</th> -->
            <th scope="col"  class="text-center table-dark">Serial no.</th>
            <th scope="col" class="text-center table-dark">Bus Number Plate</th>
            <th scope="col" class="text-center table-dark">Bus Ticket Price</th>
            <th scope="col" class="text-center table-dark">Bus No. of Seats</th>
            <th scope="col" class="text-center table-dark">Bus Category</th>
            <th scope="col" class="text-center table-dark">Bus Registered Time</th>
            <th scope="col" class="text-center table-dark">Delete Bus</th>
          </tr>
        </thead>
        <tbody>
@{
           var j = 1;


 foreach (tbl_bus i in Model)
           {
           <tr class="xyz">
           <td class="text-center"><b>@j</b></td>             
           <td class="text-center Usr_name">@i.bus_NumberPlate</td>
           <td class="text-center usr_email">@i.bus_ticketPrice</td>
           <td class="text-center org_name">@i.bus_noOfSeats</td>                                      
           <td class="text-center nmbre_plate">@i.bus_category</td>                                            
           <td class="text-center">@i.Created_at</td>           
           <th scope="row" class="text-center">
           <a class="btn btn-danger" style="font-size: 20px;" 
           data-ajax="true"
           data-ajax-mode="replace"
           data-ajax-update="#update_5"

           asp-controller="BusOwner" 
           asp-action="DeleteBus"           
           asp-route-id="@i.bus_id"><i class='bx bx-trash'></i></a>
           </th>   
         </tr>
         j++;
    }


     }
        </tbody>
      </table>
      <!-- End Bordered Table -->