@model IEnumerable<tbl_sale>
@{
    Layout = "~/Views/Shared/_BusOwnerLayout.cshtml";
}


<div class="pagetitle">
    <h1>View Sale</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="BusOwner">Home</a></li>
            <li class="breadcrumb-item">View Sale</li>

        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="card">
        <div class="card-body">

            <div class="input-group mb-3">
                <div class="form-outline">
                    <input style="line-height: 18px;border: 1px solid grey;" id="id" onkeyup="srch()" class="form-control mt-5" placeholder="Search" />
                </div>
                <button type="button" class="btn btn-primary h-25 mt-5">
                    <i class="bx bx-search"></i>
                </button>
            </div>





            <br>

            <div>


                <table id="exam" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <!-- <th scope="col" class="text-center table-active">User id</th> -->
                            <th scope="col" class="text-center table-dark">Serial no.</th>
                            <th scope="col" class="text-center table-dark">Bus Number</th>
                            <th scope="col" class="text-center table-dark">Organization Name</th>
                            <th scope="col" class="text-center table-dark">Destination</th>
                            <th scope="col" class="text-center table-dark">Category</th>
                            <th scope="col" class="text-center table-dark">Departure</th>
                            <th scope="col" class="text-center table-dark">Total Seats</th>
                            <th scope="col" class="text-center table-dark">Sold Seats</th>
                            <th scope="col" class="text-center table-dark">Total Fare Collected</th>
                            <th scope="col" class="text-center table-dark">Sale Recorded Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var j = 1;


                            foreach (tbl_sale i in Model)
                            {
                                <tr class="xyz">
                                    <td class="text-center"><b>@j</b></td>
                                    <td class="text-center Usr_name">@i.Sale_busNumber</td>
                                    <td class="text-center">@i.Sale_busOrganizationName</td>
                                    <td class="text-center org_name">@i.Sale_busDestination</td>
                                    <td class="text-center usr_email">@i.Sale_busCategory</td>
                                    <td class="text-center nmbre_plate">@i.Sale_busStartingTime</td>
                                    <td class="text-center">@i.sale_TotalnoOfSeats</td>
                                    <td class="text-center">@i.sale_noOfSoldSeats</td>
                                    <td class="text-center">@i.sale_totalAmountCollectedFromOneBus</td>
                                    <td class="text-center">@i.Created_at </td>
                                     
                                </tr>
                                j++;
                            }


                        }
                    </tbody>
                </table>
                <!-- End Bordered Table -->




                 
            </div>
        </div>
    </div>
</section>



<script>

    function srch() {
        let filter = document.getElementById('id').value.toUpperCase();
        let myTable = document.getElementById('exam');
        let whole_table = document.querySelectorAll('.xyz');

        let tr = myTable.getElementsByClassName("Usr_name")
        let tr1 = myTable.getElementsByClassName("usr_email")
        let tr2 = myTable.getElementsByClassName("org_name")
        let tr3 = myTable.getElementsByClassName("nmbre_plate")
        for (var i = 0; i < tr.length; i++) {
            let td = tr[i].textContent || td.innerHTML;
            let td1 = tr1[i].textContent || td.innerHTML;
            let td2 = tr2[i].textContent || td.innerHTML;
            let td3 = tr3[i].textContent || td.innerHTML;
            if (td) {
                if (td.toUpperCase().indexOf(filter) > -1 || td1.toUpperCase().indexOf(filter) > -1 || td2.toUpperCase().indexOf(filter) > -1 || td3.toUpperCase().indexOf(filter) > -1) {
                    console.log(whole_table[i].style.display = "")
                } else {
                    whole_table[i].style.display = "none"
                }
            }
        }
    }


</script>

